<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
</head>
<body class="admin">
    <div class="page">
        <header>
            <div id="title">
                <h1>Dashboard of Modular E-commerce</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                @*helper for menu generation based on attribute Menu and property Name*@
                @foreach (var item in AdminService.Menu())
                {
                    <li>@Html.ActionLink(item.Title, "Index", new { Area = item.Area, Controller = item.Controller })</li>
                }
                    
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
