@{
    ViewBag.Title = "Modular E-Commerce";
    
}
@model Meshop.Core.Models.HomeViewModel
           



    <h2>@T("Product Recommendations")</h2>
    @foreach (var item in Model.Products)
    {
        <div class="productday">
            <h3>@Html.ActionLink(item.Name, "Product", new { Area = "", Controller = "Home", id = item.ProductID })</h3>
            <div>@item.Price @CommonService.Settings.CURRENCY_SIGN</div>
        </div>
    }

    <div style="clear: both; margin-top:15px;">@WidgetPlace(PagePosition.Document)</div>
        

           




